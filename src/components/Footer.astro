---
import Logo from './Logo.astro'

const { content } = Astro.props as { content: string }

const withAttrs = (html: string) => html.replace(/<a /g, '<a target="_blank" ')
---

<footer>
   <small set:html={withAttrs(content)} />

   <Logo width="40" height="40" style={{ display: 'flex', marginBottom: 'var(--s-07)' }} />
</footer>

<style>
   footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: var(--footer-top-margin) auto 0 auto;
      width: var(--article-container);
      max-width: 100%;
      font-size: var(--f-5);

      & small {
         height: min-content;
      }

      @media (--tablet-to) {
         font-size: var(--f-3);
         align-items: flex-start;
         flex-direction: column-reverse;
      }

      & :global(span),
      & :global(a) {
         color: var(--accent);
      }

      & :global(a):hover {
         text-decoration: underline;
      }
   }
</style>
