---
import Logo from './Logo.astro'

const { content, isCentered } = Astro.props as { content: string; isCentered?: boolean }

const withAttrs = (html: string) => html.replace(/<a /g, '<a target="_blank" ')
---

<footer {...isCentered ? { 'data-centered': '' } : {}}>
   <small set:html={withAttrs(content)} />

   <Logo width="40" height="40" style={{ display: 'flex', marginBottom: 'var(--s-07)' }} />
</footer>

<style>
   footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: var(--s-7);
      color: var(--fg);
      font-size: responsive 1.25rem 1.5rem;
      font-range: 475px 2440px;

      & small {
         height: min-content;
      }

      @media (--tablet-to) {
         align-items: flex-start;
         flex-direction: column-reverse;
      }

      &[data-centered] {
         width: var(--article-container);
         max-width: 100%;
         margin: 0 auto;
      }

      & :global(span),
      & :global(a) {
         color: var(--accent);
      }

      & :global(a):hover {
         text-decoration: underline;
      }
   }
</style>
