---
const { isCentered } = Astro.props as { isCentered?: boolean }

const attrs = {
   rel: 'nofollow noreferrer',
   target: '_blank',
}
---

<footer {...isCentered ? { 'data-centered': '' } : {}}>
   <small>
      Typeface by
      <a href="https://www.atipofoundry.com/" {...attrs}>Atipo</a>
      â€” Source code on <a href="https://github.com/smastrom/smastrom-io" {...attrs}>GitHub</a>
   </small>
</footer>

<style>
   footer {
      color: var(--fg);
      font-size: responsive 1.125rem 1.75rem;
      font-range: 768px 3840px;
      position: relative;

      &[data-centered] {
         width: var(--article-container);
         max-width: 100%;
         margin: 0 auto;
      }
   }

   a {
      color: var(--accent);

      &:hover {
         text-decoration: underline;
      }
   }
</style>
